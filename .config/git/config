[user]
	name = Martin Matyášek
	email = martin.matyasek@gmail.com
[github]
	user = matyama
[init]
	defaultBranch = main
[core]
	autocrlf = input
	safecrlf = true
	pager = delta
[interactive]
	diffFilter = delta --diff-so-fancy
[delta]
	features = zebra-dark
	line-numbers = true
	side-by-side = true
	# use n and N to move between diff sections
	navigate = true
	# set to true if you're in a terminal w/ a light background color
	light = false
	# link GitHub/GitLab/Bitbucket in git blame
	#  - FIXME: does not display correctly (possibly issue with Alacritty)
	#  - https://github.com/alacritty/alacritty/issues/922
	#hyperlinks = true
[add.interactive]
	# required for git 2.37.0
	useBuiltin = false 
[merge]
	tool = nvim -d
	conflictStyle = diff3
[pull]
	ff = only
[push]
	default = simple
[diff]
	algorithm = patience
	indentHeuristic = true
	colorMoved = default
[alias]
	c = commit
	s = status
	st = status
	lg = log --all --decorate --oneline --graph
	last = log -1 HEAD
	diff-last = diff HEAD^
	dl = diff-last
	cl = log -p -- ':(exclude)Cargo.lock'
	pl = log -p -- ':(exclude)poetry.lock'
	f = push --force-with-lease
	# https://stackoverflow.com/questions/3103589
	fixup = !sh -c 'git commit --fixup=$1' -
	squash = !sh -c 'git commit --squash=$1' -
	ri = rebase -i --autosquash
	fu = "!git commit --fixup=${1:-$(git rev-parse HEAD)} && GIT_EDITOR=true git rebase -i --autosquash ${1:-$(git rev-parse HEAD~2)}~1"
	# https://stackoverflow.com/a/11688523/472927
	ss = "!f() { git stash show stash^{/$*} -p; }; f"
	sa = "!f() { git stash apply stash^{/$*}; }; f"
	sl = stash list
	ah = "!f() { git stash && git pull --rebase && git stash pop; }; f"
[ui "color"]
	ui = always
[color]
	ui = true
